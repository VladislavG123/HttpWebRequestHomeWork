<Window x:Class="HttpWebRequestHomeWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HttpWebRequestHomeWork"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="290*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="urlTextBox" Grid.Row="0" Margin=" 10 10 150 10" />
        <TextBox x:Name="tagTextBox" Grid.Row="1" Margin="150,5" />
        <Label Panel.ZIndex="-1" Grid.Row="1" Content="Тэг" Padding="0" Margin=" 0 10 150 10" />
        <Button x:Name="buttin" Grid.Row="0" Margin="271,13,21,13" Click="ButtinClick" Grid.RowSpan="2">Получить данные</Button>

        <TextBox x:Name="dataTextBox" IsReadOnly="True" Grid.Row="2" Margin="5"></TextBox>

    </Grid>
</Window>
