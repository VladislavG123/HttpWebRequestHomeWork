<Window x:Class="HttpWebRequestHomeWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HttpWebRequestHomeWork"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="367*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="urlTextBox" Grid.Row="0" Height="20" Width="250" Margin="0 0 130 0"></TextBox>
        <Button x:Name="buttin" Grid.Row="0" Height="20" Width="100" Margin="250 0 0 0" Click="ButtinClick">Получить данные</Button>

        <TextBox x:Name="dataTextBox" IsReadOnly="True" Grid.Row="1" Margin="5"></TextBox>
    
    </Grid>
</Window>
